<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:vm="clr-namespace:AvaloniaTest.ViewModels;assembly=AvaloniaTest"
        Icon="resm:AvaloniaTest.Assets.avalonia-logo.ico"
        Title="AvaloniaTest">

  <Design.DataContext>
    <vm:MainWindowViewModel/>
  </Design.DataContext>



  <!-- <TextBlock Text="{Binding Greeting}" HorizontalAlignment="Center" VerticalAlignment="Center"/>  -->
  <!-- <Button Content="{Binding Greeting}" Command="{Binding DoTheThing}"
        HorizontalAlignment="Center"
        VerticalAlignment="Center" /> -->

  <Grid>
		<Grid.ColumnDefinitions>
			<ColumnDefinition Width="*" />
			<ColumnDefinition Width="*" />
		</Grid.ColumnDefinitions>
		<Button Grid.Column="0" Content="{Binding Greeting}" Command="{Binding DoTheThing}"
        HorizontalAlignment="Center" VerticalAlignment="Center">
    </Button>
		<Button Grid.Column="1"
        Height="50" Width="100" HorizontalAlignment="Center" VerticalAlignment="Center">
      <StackPanel>
        <Image Source="Assets/avalonia-logo.ico" Height="25" Width="25"/>
        <TextBlock>Button 2</TextBlock>
      </StackPanel>
    </Button>
	</Grid>

</Window>